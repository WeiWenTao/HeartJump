<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/xtred</item>
    </style>


    <!--“发现”-->
    <style name="BaseTextView">
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:background">@drawable/shape_shenqing_fentuan</item>
    </style>

    <style name="LeftTv" parent="BaseTextView">
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="RightTv" parent="BaseTextView">
        <item name="android:layout_marginLeft">5dp</item>
    </style>


    <!--“我的”-->
    <style name="My_iv">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">17dp</item>
        <item name="android:layout_height">20dp</item>
    </style>


    <style name="My_tv">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">13dp</item>
    </style>

    <style name="Setting_tv" parent="My_tv">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--向右的小箭头-->
    <style name="My_Arrow">
        <item name="android:src">@drawable/icon_more</item>
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <!--搜索界面-->
    <style name="Search_TextView">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:background">@drawable/shape_search_hostory_bg</item>
    </style>


    <!--个人资料界面-->
    <style name="PersonalBaseTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="Right_TV" parent="PersonalBaseTv">
        <item name="android:textColor">#333</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">13dp</item>
    </style>


    <style name="Left_TV" parent="PersonalBaseTv">
        <item name="android:layout_marginLeft">13dp</item>
    </style>


    <!--分享界面的自定义对话框-->
    <style name="ShowAddressStyleTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_publish_dialog_bg</item>
    </style>

    <!--分享界面的自定义对话框-->
    <style name="BirthdayStyleTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_publish_dialog_bg</item>
    </style>


    <!--分享界面的基本布局控件-->
    <style name="ShareIv">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="ShareTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">#666</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
    </style>


    <!--星币充值-->
    <style name="StarMoneyRB">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:textColor">@color/star_money_text_selector</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:background">@drawable/star_money_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <!--认证页面 TableLayout 字体样式-->
    <style name="TabLayoutText">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <!--认证页面tv样式-->
    <style name="RenZheng_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_666</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--认证页面et样式-->
    <style name="RenZheng_et">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_666</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="AnimationFade">
        <!--   PopupWindow左右弹出的效果-->
        <item name="android:windowEnterAnimation">@anim/popwindow_in</item>
        <item name="android:windowExitAnimation">@anim/popwindow_out</item>
    </style>

    <style name="AnimationStar">
        <!--   PopupWindow上下弹出的效果-->
        <item name="android:windowEnterAnimation">@anim/classify_menu_in</item>
        <item name="android:windowExitAnimation">@anim/classify_menu_out</item>
    </style>

    <!--flowlayout-->
    <declare-styleable name="FlowLayout">
        <attr name="horizontal_spacing" format="dimension"/>
        <attr name="vertical_spacing" format="dimension"/>
    </declare-styleable>


    <!--明星主页收缩字体-->
    <style name="TextStyle_close">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <!--明星主页展开字体-->
    <style name="TextStyle_open">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <!---->
    <style name="MyOverflowText"></style>

    <!--错误提示-->
    <style name="MyErrorStyle"></style>

    <!--提示字体-->
    <style name="MyHintStyle">
        <item name="android:textColor">#999</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!--仿qq头部渐变-->
    <style name="MaterialIndicator.Demo">
        <item name="mi_indicatorColor">?android:attr/colorAccent</item>
        <item name="mi_indicatorPadding">32dp</item>
        <item name="mi_indicatorRadius">4dp</item>
    </style>

    <style name="MaterialIndicator">
        <item name="mi_indicatorRadius">4dp</item>
        <item name="mi_indicatorColor">#ff009688</item>
    </style>

    <!--EditText 下划线颜色-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/pink</item>
    </style>


    <!--返回键样式-->
    <style name="IconBackStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:src">@drawable/icon_back</item>
    </style>

    <!--标题样式-->
    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <!--<item name="android:layout_alignParentBottom">true</item>-->
        <!--<item name="android:layout_centerHorizontal">true</item>-->
        <!--<item name="android:layout_marginBottom">14dp</item>-->
    </style>

    <!--Spinner-->
    <style name="SpinnerStyle">

        <item name="colorAccent">#ff0</item>
        <item name="colorControlNormal">#ddffffff</item> <!--改变了spinner的颜色  -->
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <!--动态权限主题-->
    <style name="PermissionBlueStyle">
        <!--标题文字颜色-->
        <item name="PermissionTitleColor">@color/xtred</item>
        <!--描述文字颜色-->
        <item name="PermissionMsgColor">@color/xtred</item>
        <!--权限文字颜色-->
        <item name="PermissionItemTextColor">@color/xtred</item>
        <!--按钮背景-->
        <item name="PermissionButtonBackground">@drawable/shape_immediately_pay_bg</item>
        <!--对话框背景-->
        <item name="PermissionBackround">@drawable/shape_publish_dialog_bg</item>
        <!--按钮文字颜色-->
        <item name="PermissionButtonTextColor">@color/white</item>
    </style>
</resources>
