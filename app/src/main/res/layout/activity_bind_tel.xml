<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.cucr.myapplication.activity.regist.BindTelActivity"
    >

    <RelativeLayout
        android:id="@+id/comment_head"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bar_color"

        >

        <ImageView
            android:id="@+id/iv_base_back"
            style="@style/IconBackStyle"
            />

        <TextView
            android:id="@+id/tv_base_title"
            style="@style/TitleStyle"
            android:text="绑定手机"
            android:textColor="@color/title_color"
            />

        <include layout="@layout/horizontal_line_for_eee"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/et_tel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_10"
            android:textColorHint="#bfbfbf"
            android:textSize="@dimen/sp_16"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ccc"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <EditText
                android:maxLength="4"
                android:id="@+id/et_yzm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="@dimen/dp_10"
                android:textColorHint="#bfbfbf"
                android:textSize="@dimen/sp_16"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_send_yzm"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="发送验证码"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_comple_bind"
        android:layout_width="300dp"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/shape_immediately_pay_bg"
        android:gravity="center"
        android:text="完成绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        />
</LinearLayout>
