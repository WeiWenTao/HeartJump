<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_up_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_myyuyue_bg"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_above="@+id/line"
            android:background="@drawable/setting_up_selector"
            android:gravity="center"
            android:text="分 享"
            android:textColor="@color/xtred"
            android:textSize="17sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#99cccccc"
            />

        <TextView
            android:id="@+id/tv_report"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_above="@+id/line"
            android:background="@drawable/setting_mid_selector"
            android:gravity="center"
            android:text="举 报"
            android:textColor="@color/color_333"
            android:textSize="17sp"
            android:visibility="gone"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#99cccccc"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_del"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/setting_down_selector"
            android:gravity="center"
            android:text="删 除"
            android:textColor="#333"
            android:textSize="17sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/setting_one_selector"
        android:gravity="center"
        android:text="取 消"
        android:textColor="#999"
        android:textSize="17sp"
        />

</LinearLayout>