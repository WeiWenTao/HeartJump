    <ImageView
        android:id="@+id/iv_ft_pic"
        android:scaleType="centerCrop"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/star3_new"
        android:layout_margin="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/tv_ft_star_name"
        android:layout_toRightOf="@id/iv_ft_pic"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_15"
        android:text="明星姓名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_ft_star_fans"
        android:layout_toRightOf="@id/iv_ft_pic"
        android:layout_below="@id/tv_ft_star_name"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_12"
        android:text="粉丝 1235"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginLeft="@dimen/dp_20"
        android:id="@+id/tv_ft_continer"
        android:layout_toRightOf="@id/tv_ft_star_fans"
        android:layout_below="@id/tv_ft_star_name"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_12"
        android:text="内容 12345"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        style="@style/My_Arrow"
        />

</RelativeLayout>