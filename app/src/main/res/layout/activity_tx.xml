<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_tx"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.cucr.myapplication.activity.pay.XbTxActivity"
    >

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_black"
        >


        <ImageView
            android:id="@+id/iv_base_back"
            style="@style/IconBackStyle"
            />

        <TextView
            style="@style/TitleStyle"
            android:text="星币提现"
            />

        <ImageView
            android:id="@+id/iv_rule"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            android:src="@drawable/moneyrule"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:src="@drawable/pay_sel"
                />

            <EditText
                android:id="@+id/et_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@null"
                android:hint="支付宝账号"
                android:inputType="number"
                android:textColor="@color/color_333"
                android:textColorHint="#bbb"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>


        <View
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="#666"
            />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@null"
            android:hint="账号真实姓名"
            android:textColor="@color/color_333"
            android:textColorHint="#bbb"
            android:textSize="@dimen/sp_15"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#999"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:text="提现星币数量"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_15"
        />

    <LinearLayout
        android:id="@+id/ll_xb"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/dp_3"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="bottom"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_xb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="right"
            android:inputType="number"
            android:minWidth="1dp"
            android:maxLength="6"
            android:textColor="@color/xtred"
            android:textSize="25sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/xtred"
            android:textSize="25sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="星币"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_15"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="#666"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_have"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_15"
            android:text="可提现数量3000"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp_15"
            />

        <TextView
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/white"
            android:gravity="right"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_15"
            android:text="全部提现"
            android:textColor="#220229"
            android:textSize="@dimen/sp_15"
            />

    </LinearLayout>

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:background="@drawable/sgi_btn"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        />

</LinearLayout>
