<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_new_load"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shi_bg"
    android:orientation="vertical"
    tools:context="com.cucr.myapplication.activity.regist.NewLoadActivity"
    >

    <ImageView
        android:id="@+id/iv_cancle"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:padding="@dimen/dp_5"
        android:src="@drawable/sgi_cancel"
        />

    <ImageView
        android:layout_width="84dp"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/sgi_logo"
        />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@drawable/shape_load_edit_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="13dp"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/dp_30"
            android:src="@drawable/sgi_tell"
            />


        <EditText
            android:id="@+id/et_accunt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@null"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#ffcccc"
            android:textColorHint="#996666"
            android:textSize="@dimen/sp_16"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        >

        <LinearLayout
            android:id="@+id/ll_pswbox"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_load_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="14.5dp"
                android:layout_marginLeft="@dimen/dp_30"
                android:src="@drawable/sgi_pw"
                />

            <EditText
                android:id="@+id/et_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textColor="#ffcccc"
                android:textColorHint="#996666"
                android:textSize="@dimen/sp_16"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_forget_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/ll_pswbox"
            android:layout_below="@id/ll_pswbox"
            android:layout_marginTop="@dimen/dp_10"
            android:text="忘记密码？"
            android:textColor="#cc9999"
            android:textSize="@dimen/sp_15"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_load"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/sgi_btn"
        android:gravity="center"
        android:text="登 录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        />

    <TextView
        android:id="@+id/tv_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="注 册"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="100dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:background="#80ffcccc"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:text="第三方登录"
            android:textColor="#cc9999"
            android:textSize="@dimen/sp_15"
            />

        <View
            android:layout_width="100dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:background="#80ffcccc"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        >

        <ImageView
            android:id="@+id/iv_sina_load"
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:src="@drawable/sgi_sina"
            />

        <ImageView
            android:id="@+id/iv_wx_load"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/dp_50"
            android:src="@drawable/sgi_wx"
            />

        <ImageView
            android:id="@+id/iv_qq_load"
            android:layout_width="25dp"
            android:layout_height="26dp"
            android:layout_marginLeft="@dimen/dp_50"
            android:src="@drawable/sgi_qq"
            />

    </LinearLayout>

</LinearLayout>
