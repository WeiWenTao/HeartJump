<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_huo_dong_catgory"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.cucr.myapplication.activity.huodong.HuoDongCatgoryActivity"
    >

    <include layout="@layout/activity_base_title"/>

    <ListView
        android:id="@+id/lv_huodong_catgory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <EditText
            android:theme="@style/MyEditText"
            android:layout_centerVertical="true"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:hint="我要吐槽"
            android:textColorHint="#ababab"
            />

        <LinearLayout
            android:id="@+id/ll_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_zan"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/good_selector"
                android:paddingRight="@dimen/dp_5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="1249"
                android:textColor="#929292"
                android:textSize="@dimen/sp_13"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_toLeftOf="@id/ll_goods"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_comment"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/icon_cm_nor"
                android:layout_marginRight="@dimen/dp_5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="789"
                android:textColor="#929292"
                android:textSize="@dimen/sp_13"
                />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
