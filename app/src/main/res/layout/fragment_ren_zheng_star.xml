<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >

            <TextView
                style="@style/RenZheng_tv"
                android:text="姓名"
                />

            <EditText
                style="@style/RenZheng_et"
                android:hint="请输入真实的全名"
                />

            <include layout="@layout/horizontal_line_for_ccc"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >

            <TextView
                style="@style/RenZheng_tv"
                android:text="联系方式"
                />

            <EditText
                style="@style/RenZheng_et"
                android:hint="请输入联系方式"
                />

            <include layout="@layout/horizontal_line_for_ccc"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >

            <TextView
                style="@style/RenZheng_tv"
                android:text="所属公司"
                />

            <EditText
                style="@style/RenZheng_et"
                android:hint="请输入自己所属的公司"
                />

            <include layout="@layout/horizontal_line_for_ccc"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            >

            <TextView
                style="@style/RenZheng_tv"
                android:text="上传证件"
                />

            <EditText
                android:enabled="false"
                style="@style/RenZheng_et"
                android:hint="请上传信息清晰的图片"
                />

            <include layout="@layout/horizontal_line_for_ccc"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="325dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/shape_bg_ren_zheng"
            >

            <ImageView
                android:id="@+id/iv_add_pic_positive"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ren_zheng_add"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colocr_333"
                android:text="身份证正面"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_below="@+id/iv_add_pic_positive"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="325dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/shape_bg_ren_zheng"
            >
            <ImageView
                android:id="@+id/iv_add_pic_negative"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ren_zheng_add"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colocr_333"
                android:text="身份证反面"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_below="@+id/iv_add_pic_negative"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_commit_check"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:text="提交审核"
            android:layout_width="300dp"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shape_immediately_pay_bg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            />
        
    </LinearLayout>

</ScrollView>