<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_star_money"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.cucr.myapplication.activity.pay.PayCenterActivity"
    >


    <include layout="@layout/activity_base_title"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值账号:"
                    android:textColor="#666"
                    android:textSize="@dimen/sp_15"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="创联凯尔"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_15"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="#ebebeb"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额:"
                    android:textColor="#666"
                    android:textSize="@dimen/sp_15"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="0"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_15"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/lvbg"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:text="1元等于十星币"
                android:textColor="#666"
                android:textSize="@dimen/sp_12"
                />

            <RadioGroup
                android:id="@+id/rg_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <RadioGroup
                    android:id="@+id/rg1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rg1_rb1"
                        style="@style/StarMoneyRB"
                        android:text="50星币"
                        />

                    <RadioButton
                        android:id="@+id/rg1_rb2"
                        style="@style/StarMoneyRB"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="3dp"
                        android:text="100星币"
                        />

                    <RadioButton
                        android:id="@+id/rg1_rb3"
                        style="@style/StarMoneyRB"
                        android:text="200星币"
                        />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rg2"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rg2_rb1"
                        style="@style/StarMoneyRB"
                        android:text="300星币"
                        />

                    <RadioButton
                        android:id="@+id/rg2_rb2"
                        style="@style/StarMoneyRB"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="3dp"
                        android:text="500星币"
                        />

                    <RadioButton
                        android:id="@+id/rg2_rb3"
                        style="@style/StarMoneyRB"
                        android:text="800星币"
                        />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rg3"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rg3_rb1"
                        style="@style/StarMoneyRB"
                        android:text="1000星币"
                        />

                    <RadioButton
                        android:id="@+id/rg3_rb2"
                        style="@style/StarMoneyRB"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="3dp"
                        android:text="5000星币"
                        />

                    <RadioButton
                        android:id="@+id/rg3_rb3"
                        style="@style/StarMoneyRB"
                        android:text="10000星币"
                        />
                </RadioGroup>


            </RadioGroup>

            <LinearLayout
                android:id="@+id/ll_other"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/shape_bg_star_money_nor"
                android:gravity="center"
                android:orientation="horizontal"
                >


                <EditText
                    android:id="@+id/et_other"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="其他数量"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="#666"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/sp_15"
                    />

                <TextView
                    android:id="@+id/tv_other_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 星币"
                    android:textColor="#666"
                    android:textSize="@dimen/sp_15"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <TextView
                android:textSize="@dimen/sp_18"
                android:id="@+id/tv_pay_now"
                android:layout_width="300dp"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape_immediately_pay_bg"
                android:gravity="center"
                android:text="立即充值"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
