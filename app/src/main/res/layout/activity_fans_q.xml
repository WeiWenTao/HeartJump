<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.cucr.myapplication.activity.fansCatgory.FansQActivity"
    >

    <RelativeLayout
        android:id="@+id/comment_head"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBarHight"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_base_back"
            style="@style/IconBackStyle"
            />

        <TextView
            android:id="@+id/tv_base_title"
            style="@style/TitleStyle"
            />

        <ImageView
            android:id="@+id/iv_sort"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:src="@drawable/icon_sorting"
            />

        <include layout="@layout/horizontal_line_for_eee"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_sort"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/comment_head"
        android:background="@color/gray_white"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_sort_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最新"
            android:textColor="@color/xtred"
            />

        <TextView
            android:id="@+id/tv_sort_hot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="人气"
            android:textColor="@color/color_999"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/comment_head"
        android:background="@color/white"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></android.support.v7.widget.RecyclerView>

        <com.cucr.myapplication.widget.stateLayout.MultiStateView
            android:id="@+id/multiStateView"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:msv_emptyView="@layout/empty_common"
            app:msv_errorView="@layout/error_view"
            app:msv_loadingView="@layout/loading_view"
            >

            <com.cucr.myapplication.widget.refresh.swipeRecyclerView.SwipeRecyclerView
                android:id="@+id/rlv_fentuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </com.cucr.myapplication.widget.stateLayout.MultiStateView>

        <toan.android.floatingactionmenu.FloatingActionsMenu
            android:id="@+id/multiple_actions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            fab:fab_addButtonColorNormal="@color/xtred"
            fab:fab_addButtonColorPressed="@color/xtred"
            fab:fab_addButtonPlusIconColor="@color/xtred"
            fab:fab_addButtonSize="mini"
            fab:fab_addButtonStrokeVisible="false"
            fab:fab_animationScroll="scale"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_menuIcon="@drawable/icon_add_ft"
            >

            <toan.android.floatingactionmenu.FloatingActionButton
                android:id="@+id/action_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/white1"
                fab:fab_icon="@drawable/fb_pic"
                fab:fab_size="normal"
                fab:fab_stroke_visible="false"
                fab:fab_title="照片"
                />

            <toan.android.floatingactionmenu.FloatingActionButton
                android:id="@+id/action_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/xtred"
                fab:fab_colorNormal="@color/white"
                fab:fab_colorPressed="@color/white1"
                fab:fab_icon="@drawable/fb_vd"
                fab:fab_size="normal"
                fab:fab_stroke_visible="false"
                fab:fab_title="视频"
                />

        </toan.android.floatingactionmenu.FloatingActionsMenu>

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:visibility="gone"
            />

    </FrameLayout>

</RelativeLayout>
