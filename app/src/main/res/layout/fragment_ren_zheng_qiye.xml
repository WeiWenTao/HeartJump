<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                >

                <TextView
                    style="@style/RenZheng_tv"
                    android:text="企业全称"
                    />

                <EditText
                    android:id="@+id/et_qiye_name"
                    style="@style/RenZheng_et"
                    android:hint="请输入真实完整的企业名称"
                    />

                <include layout="@layout/horizontal_line_for_ccc"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                >

                <TextView
                    style="@style/RenZheng_tv"
                    android:text="企业联系电话"
                    />

                <EditText
                    android:id="@+id/et_qiye_contact"
                    style="@style/RenZheng_et"
                    android:hint="请输入联系电话"
                    android:inputType="number"
                    />

                <include layout="@layout/horizontal_line_for_ccc"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                >

                <TextView
                    style="@style/RenZheng_tv"
                    android:text="认证人姓名"
                    />

                <EditText
                    android:id="@+id/et_person_name"
                    style="@style/RenZheng_et"
                    android:hint="请输入真实的姓名"
                    />

                <include layout="@layout/horizontal_line_for_ccc"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                >

                <TextView
                    style="@style/RenZheng_tv"
                    android:text="认证人联系电话"
                    />

                <EditText
                    android:id="@+id/et_person_phone"
                    style="@style/RenZheng_et"
                    android:hint="请输入联系电话"
                    android:inputType="number"
                    />

                <include layout="@layout/horizontal_line_for_ccc"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                >

                <TextView
                    style="@style/RenZheng_tv"
                    android:text="认证人职位"
                    />

                <EditText
                    android:id="@+id/et_position"
                    style="@style/RenZheng_et"
                    android:hint="请输入您的职位"
                    />

                <include layout="@layout/horizontal_line_for_ccc"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_yinyezhizhao"
                android:layout_width="325dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@drawable/shape_bg_ren_zheng"
                >

                <ImageView
                    android:id="@+id/iv_add_pic_yingyezhizhao"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ren_zheng_add"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_add_pic_yingyezhizhao"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="营业执照"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_15"
                    />

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/img_qieye_zhizhao"
                    android:layout_width="325dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_bg_ren_zheng"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    app:sriv_left_bottom_corner_radius="@dimen/dp_5"
                    app:sriv_left_top_corner_radius="@dimen/dp_5"
                    app:sriv_right_bottom_corner_radius="@dimen/dp_5"
                    app:sriv_right_top_corner_radius="@dimen/dp_5"
                    />


            </RelativeLayout>

            <!--身份证正面-->
            <RelativeLayout
                android:id="@+id/rl_sfz_positive"
                android:layout_width="325dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@drawable/shape_bg_ren_zheng"
                >

                <ImageView
                    android:id="@+id/iv_add_pic_zheng"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ren_zheng_add"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_add_pic_zheng"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="认证人身份证正面"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_15"
                    />

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/img_qiye_positive"
                    android:layout_width="325dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_bg_ren_zheng"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    app:sriv_left_bottom_corner_radius="@dimen/dp_5"
                    app:sriv_left_top_corner_radius="@dimen/dp_5"
                    app:sriv_right_bottom_corner_radius="@dimen/dp_5"
                    app:sriv_right_top_corner_radius="@dimen/dp_5"
                    />

            </RelativeLayout>

            <!--身份证反面-->
            <RelativeLayout
                android:id="@+id/rl_sfz_nagetive"
                android:layout_width="325dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@drawable/shape_bg_ren_zheng"
                >

                <ImageView
                    android:id="@+id/iv_add_pic_fan"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ren_zheng_add"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_add_pic_fan"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_25"
                    android:text="认证人身份证反面"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_15"
                    />
                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/img_qiye_nagetive"
                    android:layout_width="325dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_bg_ren_zheng"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    app:sriv_left_bottom_corner_radius="@dimen/dp_5"
                    app:sriv_left_top_corner_radius="@dimen/dp_5"
                    app:sriv_right_bottom_corner_radius="@dimen/dp_5"
                    app:sriv_right_top_corner_radius="@dimen/dp_5"
                    />

            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_fail_title"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:text="审核失败原因："
                android:textColor="@color/red"
                android:textSize="@dimen/sp_13"
                />

            <TextView
                android:visibility="gone"
                android:lineSpacingExtra="@dimen/dp_3"
                android:id="@+id/tv_fail_info"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_12"
                />


            <TextView
                android:id="@+id/tv_commit_check"
                android:layout_width="300dp"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:background="@drawable/selector_shenhe"
                android:gravity="center"
                android:text="提交审核"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/fl_pop_bg_qiye"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5555"
        android:visibility="gone"
        />


</RelativeLayout>