<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    android:id="@+id/activity_fen_tuan_catgory"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/title_star_ft"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_black"
        >

        <ImageView
            android:id="@+id/iv_ft_back"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingRight="20dp"
            android:src="@drawable/icon_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_centerHorizontal="true"
            android:text="明星姓名"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

    </RelativeLayout>

    <ListView
        android:layout_below="@id/title_star_ft"
        android:id="@+id/lv_ft_catgory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/lvbg"
        android:dividerHeight="@dimen/dp_10"
        />

    <ImageView
        android:clickable="true"
        android:id="@+id/iv_publish"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/bnt_p"
        />

</RelativeLayout>
