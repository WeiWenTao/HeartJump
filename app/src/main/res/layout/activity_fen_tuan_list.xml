<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_fen_tuan_catgory"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <com.cucr.myapplication.widget.alphaHead.GradationScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/iv_fuzzy_bg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/star3_new"
                    />

                <LinearLayout
                    android:id="@+id/iv_ft_star_pic"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="90dp"
                    android:background="@color/white"
                    android:padding="1dp"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/star3_new"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_ft_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="105dp"
                    android:layout_toRightOf="@id/iv_ft_star_pic"
                    android:text="粉丝 1235"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/tv_ft_continer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_ft_fans"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/tv_ft_fans"
                    android:text="内容 12345"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    />

                <TextView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignLeft="@id/tv_ft_fans"
                    android:layout_below="@id/tv_ft_fans"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_white_stroke_r10"
                    android:gravity="center"
                    android:text="加关注"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="90dp"
                    android:text="打榜"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13"
                    />

            </RelativeLayout>

            <com.cucr.myapplication.widget.alphaHead.NoScrollListview
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </com.cucr.myapplication.widget.alphaHead.GradationScrollView>

    <ImageView
        android:id="@+id/iv_publish"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="25dp"
        android:clickable="true"
        android:src="@drawable/bnt_p"
        />

    <RelativeLayout
        android:id="@id/head"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="center|bottom"
            android:paddingBottom="13dp"
            android:text="明星姓名"
            android:textColor="#fff"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/iv_ft_back"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingRight="20dp"
            android:src="@drawable/icon_back"
            />

    </RelativeLayout>


</RelativeLayout>
