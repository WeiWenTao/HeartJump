<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_star_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/pic1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_neckname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="胡歌"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_16"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1-27   17：28"
                    android:textColor="#929292"
                    android:textSize="@dimen/sp_12"
                    />

                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="1"
                    android:text="来自明星姓名粉丝团"
                    android:textColor="#929292"
                    android:textSize="@dimen/sp_12"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="9dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/icon_pv_nor"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="6534"
                        android:textColor="#929292"
                        android:textSize="@dimen/sp_12"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:lineSpacingExtra="@dimen/line_space"
        android:text="除夕夜上微博，边看边聊嗨！今天是除夕，先给大家用家乡话拜年啦~今晚还要记得~新的一年，大吉大利！除夕夜上微博，边看边聊嗨！今天是除夕，先给大家用家乡话拜年啦~今晚还要记得~新的一年，大吉大利！"
        android:textColor="#333"
        android:textSize="@dimen/sp_15"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!--<GridView-->
        <!--android:id="@+id/gridview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="@dimen/dp_10"-->
        <!--android:columnWidth="110dp"-->
        <!--android:gravity="center"-->
        <!--android:horizontalSpacing="5dp"-->
        <!--android:numColumns="3"-->
        <!--android:stretchMode="columnWidth"-->
        <!--android:verticalSpacing="2.5dp"-->
        <!--/>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:src="@drawable/img1"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:src="@drawable/img1"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_weight="1"
                android:src="@drawable/img1"
                />
        </LinearLayout>

    </RelativeLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_20"
    android:background="#f6f6f6"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部评论"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_666"
        />


</LinearLayout>
