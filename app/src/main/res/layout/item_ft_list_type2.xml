<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:id="@+id/ll_type2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_star_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/img_user"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_neckname"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/sp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="胡歌"
                android:textColor="@color/pink"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:textColor="#929292"
                    android:textSize="@dimen/sp_12"
                    android:text="1月27日 17：28 来自微博"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv_forminfo"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    >
                    <ImageView
                        android:layout_marginTop="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="9dp"
                        android:src="@drawable/icon_pv_nor"
                        />

                    <TextView
                        android:id="@+id/tv_read"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6534"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#929292"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



        <TextView
            android:id="@+id/tv_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:lineSpacingExtra="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333"
            android:text="联凯尔国际传媒机构（C.U.CR）创始于2002年，通过10余年的发展，已经成为国内一线知名公关传媒机构之一，公司集公关传播、城市营销、媒体投资、文化创意四大业务模块于一体。现在北京和武汉设有南北两大运营中心，同时上海、广州（香港）、成都等地的区域公司正在筹备中，预计在未来5年内形成全国市场五大区域精细化管理的规模。创联凯尔一直密切关注市场动向、紧随客户，凭籍公关行业领跑者的历史使命，在专业的运作系统保障下，为广大客户提供策略性、创造性、整合性和可实施性的全方位一体化的公关解决方案，矢志为政府、非政府组织、国内外知名企业提供一体化的一站式精准公关传播服务。企业独创的MMS、CMS、QMS、SMS、HMS、FMS六大运营管理系统现已成为企业持续经营的有力保障，能够高效地为客户提供360°超乎想象的即时在线服务。"
            android:maxLines="3"
            android:ellipsize="end"
            />

    <com.cucr.myapplication.widget.gridView.NoScrollGridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:columnWidth="110dp"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2.5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <ImageView
            android:id="@+id/iv_share3"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/icon_s_nor"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_share3"
            android:text="分享"
            android:textColor="#929292"
            android:textSize="@dimen/sp_13"
            />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ll_good"
            android:layout_marginRight="50dp"
            >


            <TextView
                android:id="@+id/tv_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="789"
                android:layout_alignParentRight="true"
                android:textColor="#929292"
                android:textSize="@dimen/sp_13"
                />

            <ImageView
                android:id="@+id/iv_session3"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_35"
                android:layout_toLeftOf="@id/tv_session0"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="8dp"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:src="@drawable/icon_cm_nor"
                />

            <!--<ImageView-->
            <!--android:id="@+id/iv_session3"-->
            <!--android:layout_width="@dimen/dp_30"-->
            <!--android:layout_height="@dimen/dp_35"-->
            <!--android:layout_centerVertical="true"-->

            <!--android:layout_toLeftOf="@id/tv_session"-->
            <!--android:paddingBottom="@dimen/dp_10"-->
            <!--android:paddingLeft="@dimen/dp_10"-->
            <!--android:paddingRight="@dimen/dp_5"-->
            <!--android:paddingTop="@dimen/dp_10"-->
            <!--android:src="@drawable/icon_cm_nor"-->
            <!--/>-->
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/iv_favorite3"
                android:layout_width="@dimen/dp_30"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_favorite"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_10"
                android:src="@drawable/icon_good_nor"
                />

            <TextView
                android:id="@+id/tv_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:text="1249"
                android:textColor="#929292"
                android:textSize="@dimen/sp_13"
                />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_999"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/reward_icon"
            />


        <TextView
            android:id="@+id/tv_dashang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_6"
            android:text="10人打赏了道具"
            android:textColor="#5d1111"
            android:textSize="@dimen/sp_13"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/iv_dashang"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:src="@drawable/reward_btn"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/lvbg"
        />
</LinearLayout>
