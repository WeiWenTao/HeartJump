<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/zise"
            android:fitsSystemWindows="true"
            >

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_title1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="福利"
                    android:textColor="@color/xtred"
                    android:textSize="@dimen/sp_18"
                    />

                <TextView
                    android:id="@+id/tv_title2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="活动"
                    android:textColor="@color/zongse"
                    android:textSize="@dimen/sp_18"
                    />


            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_sjx"
                android:layout_width="30dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_toRightOf="@+id/ll_title"
                android:clickable="true"
                android:paddingBottom="8dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="8dp"
                android:src="@drawable/sjx"

                />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="41dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingBottom="14dp"
                android:paddingRight="@dimen/dp_20"
                android:src="@drawable/icon_search"
                />

            <ImageView
                android:id="@+id/iv_header_msg"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingBottom="13dp"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:src="@drawable/icon_msg"
                />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_fuli_huodong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_pop_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popWindowBg"
        android:fitsSystemWindows="true"
        android:visibility="gone"
        />

    <!--android:id="@+id/ll_star_recommend"-->
    <!--android:id="@+id/ll_star_classify"-->


</RelativeLayout>

