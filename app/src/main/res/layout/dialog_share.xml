<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="240dp"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_15"
        android:text="分享"
        android:textColor="#333"
        android:textSize="@dimen/sp_15"
        />

    <!--撑大dialog-->
    <TextView
        android:layout_width="500dp"
        android:layout_height="1dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <!--<LinearLayout
            android:id="@+id/ll_share_ft"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            >
            <ImageView
                style="@style/ShareIv"
                android:src="@drawable/icon_team"
                />
            <TextView
               style="@style/ShareTv"
                android:text="粉团"
                />
        </LinearLayout>-->

        <LinearLayout
            android:id="@+id/ll_share_pyq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                style="@style/ShareIv"
                android:src="@drawable/s_circle"
                />

            <TextView
                style="@style/ShareTv"
                android:text="朋友圈"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_wxhy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                style="@style/ShareIv"
                android:src="@drawable/s_weixin"
                />

            <TextView
                style="@style/ShareTv"
                android:text="微信好友"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_qqhy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                style="@style/ShareIv"
                android:src="@drawable/s_qq"
                />

            <TextView
                style="@style/ShareTv"
                android:text="QQ好友"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_qzone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                style="@style/ShareIv"
                android:src="@drawable/s_zone"
                />

            <TextView
                style="@style/ShareTv"
                android:text="QQ空间"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:id="@+id/ll_share_sina"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                style="@style/ShareIv"
                android:src="@drawable/s_sina"
                />

            <TextView
                style="@style/ShareTv"
                android:text="新浪微博"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_copy_link"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                style="@style/ShareIv"
                android:src="@drawable/s_link"
                />

            <TextView
                style="@style/ShareTv"
                android:text="复制链接"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            >


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_cancle"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/s_cancel"
        />

</LinearLayout>