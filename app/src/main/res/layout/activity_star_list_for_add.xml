<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/zise"
        android:fitsSystemWindows="true"
        >

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="@dimen/dp_55"
            android:layout_marginRight="@dimen/dp_55"
            app:tabBackground="@null"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabPadding="@dimen/dp_10"
            app:tabSelectedTextColor="@color/xtred"
            app:tabTextAppearance="@style/TabLayoutText"
            app:tabTextColor="@color/zongse"
            ></android.support.design.widget.TabLayout>

        <ImageView
            android:id="@+id/iv_base_back"
            style="@style/IconBackStyle"
            />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_star_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></android.support.v4.view.ViewPager>


    <TextView
        android:id="@+id/tv_enter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/xtred"
        android:clickable="true"
        android:gravity="center"
        android:text="进入心跳"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:visibility="gone"
        />

</LinearLayout>

