<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_star_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_neckname"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/sp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="胡歌"
                android:textColor="@color/pink"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:textColor="#929292"
                    android:textSize="@dimen/sp_12"
                    android:text="1月27日 17：28 来自微博"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/textView4"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    >
                    <ImageView
                        android:layout_marginTop="1dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="9dp"
                        android:src="@drawable/icon_pv_nor"
                        />

                    <TextView
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6534"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#929292"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:lineSpacingExtra="@dimen/dp_4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="@dimen/sp_15"
        android:textColor="#333"
        android:text="#杨幂绣春刀修罗战场#@杨幂“这样的世道，你还没过够吗？”浮生乱世，追寻生存之道，与官场素无纠葛的她因何陷入斗争漩涡？纷乱四起，娇弱如她。。。"
        android:id="@+id/textView"
        />

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_marginRight="@dimen/dp_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="115dp"
            android:id="@+id/imageView2"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="115dp"
            android:layout_marginRight="@dimen/dp_5"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="115dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <ImageView
            android:id="@+id/iv_share3"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/icon_s_nor"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_share3"
            android:text="分享"
            android:textColor="#929292"
            android:textSize="@dimen/sp_13"
            />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="1249"
            android:textColor="#929292"
            android:textSize="@dimen/sp_13"
            />



        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_favorite3"
            android:layout_marginRight="50dp"
            >


            <TextView
                android:id="@+id/tv_session0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="789"
                android:layout_alignParentRight="true"
                android:textColor="#929292"
                android:textSize="@dimen/sp_13"
                />

            <ImageView
                android:id="@+id/iv_session3"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_35"
                android:layout_toLeftOf="@id/tv_session0"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="8dp"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:src="@drawable/icon_cm_nor"
                />

            <!--<ImageView-->
            <!--android:id="@+id/iv_session3"-->
            <!--android:layout_width="@dimen/dp_30"-->
            <!--android:layout_height="@dimen/dp_35"-->
            <!--android:layout_centerVertical="true"-->

            <!--android:layout_toLeftOf="@id/tv_session"-->
            <!--android:paddingBottom="@dimen/dp_10"-->
            <!--android:paddingLeft="@dimen/dp_10"-->
            <!--android:paddingRight="@dimen/dp_5"-->
            <!--android:paddingTop="@dimen/dp_10"-->
            <!--android:src="@drawable/icon_cm_nor"-->
            <!--/>-->
        </RelativeLayout>

        <ImageView

            android:id="@+id/iv_favorite3"
            android:layout_width="@dimen/dp_30"
            android:layout_height="33dp"

            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/icon_good_nor"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_favorite"
            android:layout_toStartOf="@+id/tv_favorite"
            />


    </RelativeLayout>

</LinearLayout>
