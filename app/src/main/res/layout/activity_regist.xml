<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/activity_load"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cucr.myapplication.activity.regist.LoadActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/shop_bg"
        />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:background="@color/color_666"
            android:gravity="center"
            android:text="logo"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            >

            <TextView
                android:id="@+id/tv_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="中国+86"
                android:textColor="#78ceb7"
                android:textSize="@dimen/sp_16"
                />

            <EditText
                android:id="@+id/et_phone_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@id/tv_phone_num"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/white"
                android:textColorHint="#b0b0b0"
                android:textSize="@dimen/sp_16"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/iv_psw"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/icon_pswda"
                />

            <EditText
                android:inputType="number"
                android:id="@+id/et_yanzhengm"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@id/iv_psw"
                android:background="@null"
                android:hint="验证码"
                android:maxLength="4"
                android:textColor="@color/white"
                android:textColorHint="#b0b0b0"
                android:textSize="@dimen/sp_16"
                />

            <TextView
                android:id="@+id/tv_get_yanzhengm"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_get_yzm"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                />

            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/iv_account"
                android:layout_width="13dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/icon_account"
                />

            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@id/iv_account"
                android:background="@null"
                android:hint="昵称"
                android:textColor="@color/white"
                android:textColorHint="#b0b0b0"
                android:textSize="@dimen/sp_16"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/iv_set_psw"
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/icon_pswd"
                />

            <EditText
                android:id="@+id/et_set_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@id/iv_set_psw"
                android:background="@null"
                android:hint="设置密码"
                android:inputType="textPassword"
                android:maxLength="10"
                android:textColor="@color/white"
                android:textColorHint="#b0b0b0"
                android:textSize="@dimen/sp_16"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_regist"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/selector_load"
            android:enabled="false"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            />

    </LinearLayout>

</RelativeLayout>