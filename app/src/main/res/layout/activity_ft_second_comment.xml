<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cucr.myapplication.activity.comment.FtSecondCommentActivity"
    >

    <include layout="@layout/activity_base_title"/>


    <com.cucr.myapplication.widget.refresh.RefreshLayout
        android:id="@+id/ref"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <ListView
            android:id="@+id/lv_all_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lvbg"
            android:divider="#ccc"
            android:dividerHeight="1px"
            ></ListView>

    </com.cucr.myapplication.widget.refresh.RefreshLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        >

        <com.vanniktech.emoji.EmojiEditText
            android:id="@+id/et_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:hint="我要吐槽"
            android:imeOptions="actionSend|flagNoExtractUi"
            android:textColorHint="#ababab"
            android:textSize="@dimen/sp_13"
            android:theme="@style/MyEditText"
            />

        <LinearLayout
            android:id="@+id/ll_comment_good"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            >

            <LinearLayout
                android:id="@+id/ll_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_toLeftOf="@id/ll_goods"
                >

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@drawable/icon_cm_nor"
                    />

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="789"
                    android:textColor="#929292"
                    android:textSize="@dimen/sp_13"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_goods"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:paddingLeft="@dimen/dp_10"
                >

                <ImageView
                    android:id="@+id/iv_zan"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/dp_5"
                    android:src="@drawable/good_selector"
                    />

                <TextView
                    android:id="@+id/tv_givecount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1249"
                    android:textColor="#929292"
                    android:textSize="@dimen/sp_13"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_emoji_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/iv_emoji"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_20"
                android:padding="@dimen/dp_5"
                android:src="@drawable/icon_face"
                />

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:padding="@dimen/dp_5"
                android:text="发送"
                android:textColor="#ababab"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
