<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/zise"
        >

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="@dimen/dp_55"
            android:layout_marginRight="@dimen/dp_55"
            app:tabBackground="@null"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabPadding="@dimen/dp_10"
            app:tabSelectedTextColor="@color/xtred"
            app:tabTextAppearance="@style/TabLayoutText"
            app:tabTextColor="@color/zongse"
            ></android.support.design.widget.TabLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_search"
            android:layout_width="41dp"
            android:layout_height="35dp"
            android:paddingRight="@dimen/dp_20"
            android:layout_alignParentBottom="true"
            android:paddingBottom="14dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/icon_search"
            />

        <ImageView
            android:id="@+id/iv_header_msg"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="13dp"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingLeft="18dp"
            android:paddingTop="10dp"
            android:src="@drawable/icon_msg"
            />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_hot_focus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></android.support.v4.view.ViewPager>


</LinearLayout>