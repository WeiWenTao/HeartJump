<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/activity_creat_ft"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.cucr.myapplication.activity.fenTuan.CreatFt"
        >

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/blue_black"
            >


            <ImageView
                android:id="@+id/iv_fentuan_back"
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"

                android:paddingBottom="14dp"
                android:paddingRight="20dp"
                android:src="@drawable/icon_back"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:text="创建粉团"
                android:textColor="@color/white"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/iv_rule"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="12dp"
                android:paddingRight="@dimen/dp_10"
                android:src="@drawable/icon_rule"
                />

        </RelativeLayout>

        <ListView
            android:id="@+id/lv_creating_ft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/white"
            android:dividerHeight="10dp"
            ></ListView>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_pop_bg_creat_ft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5555"
        android:visibility="gone"
        />


</RelativeLayout>