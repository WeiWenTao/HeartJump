<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        >
    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/image"
        android:src="@drawable/star1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        app:sriv_left_top_corner_radius="10dp"
        app:sriv_right_top_corner_radius="10dp"
        app:sriv_left_bottom_corner_radius="0dp"
        app:sriv_right_bottom_corner_radius="0dp"/>

        <FrameLayout
            android:id="@+id/fl_star_bg"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/shape_gv_img_bg"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:id="@+id/iv_sel"
                android:src="@drawable/checked"
                android:layout_gravity="center"
                />
        </FrameLayout>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/rl_goto_starpager"
        android:clickable="true"
        android:background="@drawable/shape_home_star_bg"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_star_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="林更新"
            android:textColor="#666"
            android:textSize="@dimen/sp_13"
            />
        
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/tv_star_name"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:src="@drawable/enter_sel"
            />

        <ImageView
            android:id="@+id/iv_star_fans"
            android:layout_marginLeft="2dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/fans_icon"
            android:layout_below="@+id/tv_star_name"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_below="@+id/tv_star_name"
            android:layout_toRightOf="@id/iv_star_fans"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:textColor="#999"
            android:layout_height="wrap_content"
            android:text="45893"
            />
        
        
    </RelativeLayout>

</LinearLayout>