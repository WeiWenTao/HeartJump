<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/shape_publish_dialog_bg"
    >

    <TextView
        android:id="@+id/tv_dashang_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:text="打赏星币"
        android:textColor="#333"
        android:textSize="@dimen/sp_15"
        />

    <RadioGroup
        android:gravity="center"
        android:id="@+id/rg_xingbi"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/tv_dashang_title"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        >

        <RadioButton
            android:checked="true"
            android:id="@+id/rb1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/star_dashang_selector"
            android:button="@null"
            android:gravity="center"
            android:text="1星币"
            android:textColor="@color/star_money_text_selector"
            android:textSize="@dimen/sp_12"
            />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@drawable/star_dashang_selector"
            android:button="@null"
            android:gravity="center"
            android:text="5星币"
            android:textColor="@color/star_money_text_selector"
            android:textSize="@dimen/sp_12"
            />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/star_dashang_selector"
            android:button="@null"
            android:gravity="center"
            android:text="10星币"
            android:textColor="@color/star_money_text_selector"
            android:textSize="@dimen/sp_12"
            />
    </RadioGroup>

    <EditText
        android:numeric="integer"
        android:cursorVisible="false"
        android:id="@+id/et_other"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_centerHorizontal="true"
        android:layout_width="75dp"
        android:layout_height="@dimen/dp_25"
        android:background="@drawable/shape_bg_star_dashang_other"
        android:textSize="12sp"
        android:textColor="@color/color_666"
        android:textColorHint="@color/color_666"
        android:hint="其他数量"
        android:layout_below="@id/rg_xingbi"
        android:inputType="number"
        android:maxLength="9"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_cancle"
        android:layout_marginTop="25dp"
        android:layout_below="@id/et_other"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999"
        android:text="取消"
        android:textSize="@dimen/sp_18"
        />

    <TextView
        android:id="@+id/tv_confirm"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="25dp"
        android:layout_below="@id/et_other"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#78ceb7"
        android:text="确定"
        />

</RelativeLayout>