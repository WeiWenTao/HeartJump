<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_dabang"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/tv_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="1"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_icon_dabang"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_ranking"
            android:src="@drawable/pic1_tv"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_user_icon_dabang"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="我是陈先森啊"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_16"
                />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="@dimen/dp_5"
                android:text="心跳值"
                android:textColor="@color/xtred"
                android:textSize="@dimen/sp_12"
                />

            <TextView
                android:id="@+id/tv_xingbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_num"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_toRightOf="@id/tv_num"
                android:text="12345"
                android:textColor="@color/xtred"
                android:textSize="@dimen/sp_13"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_dabang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="16.5dp"
                android:src="@drawable/icon_award"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="打榜"
                android:textColor="@color/xtred"
                android:textSize="@dimen/sp_12"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>