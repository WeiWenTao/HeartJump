<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_star_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/pic1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="胡歌"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_16"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1-27   17：28"
                    android:textColor="#929292"
                    android:textSize="@dimen/sp_12"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="9dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/icon_pv_nor"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="6534"
                        android:textColor="#929292"
                        android:textSize="@dimen/sp_12"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/line_space"
        android:maxLines="3"
        android:text="除夕夜上微博，边看边聊嗨！今天是除夕，先给大家用家乡话拜年啦~今晚还要记得~新的一年，大吉大利！除夕夜上微博，边看边聊嗨！今天是除夕，先给大家用家乡话拜年啦~今晚还要记得~新的一年，大吉大利！"
        android:textColor="#333"
        android:textSize="@dimen/sp_15"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!--<GridView-->
        <!--android:id="@+id/gridview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="@dimen/dp_10"-->
        <!--android:columnWidth="110dp"-->
        <!--android:gravity="center"-->
        <!--android:horizontalSpacing="5dp"-->
        <!--android:numColumns="3"-->
        <!--android:stretchMode="columnWidth"-->
        <!--android:verticalSpacing="2.5dp"-->
        <!--/>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:src="@drawable/img1"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:src="@drawable/img1"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_weight="1"
                android:src="@drawable/img1"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/iv_share3"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_10"
                android:src="@drawable/icon_s_nor"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_share3"
                android:text="分享"
                android:textColor="#929292"
                android:textSize="@dimen/sp_13"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="1249"
            android:textColor="#929292"
            android:textSize="@dimen/sp_13"
            />


        <ImageView

            android:id="@+id/iv_favorite3"
            android:layout_width="@dimen/dp_30"
            android:layout_height="33dp"
            android:layout_centerVertical="true"

            android:layout_toLeftOf="@id/tv_favorite"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/icon_good_nor"
            />

        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@id/iv_favorite3"
            >


            <TextView
                android:id="@+id/tv_session0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="789"
                android:textColor="#929292"
                android:textSize="@dimen/sp_13"
                />

            <ImageView
                android:id="@+id/iv_session3"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_35"
                android:layout_toLeftOf="@id/tv_session0"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="8dp"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:src="@drawable/icon_cm_nor"
                />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/lvbg"
        android:layout_height="@dimen/dp_10"/>

</LinearLayout>
