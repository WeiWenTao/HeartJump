<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_25"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_16"
        tools:text="行程内容行程内容行程内容行程内容行程内容"
        />

    <RelativeLayout
        android:layout_below="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_drop"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_25"
            android:src="@drawable/drop1"
            />

        <TextView
            android:id="@+id/tv_journey_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/iv_drop"
            android:text="2017-8-28"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:id="@+id/tv_journey_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_25"
            android:text="湖北省 武汉市 洪山区"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_14"
            />

        <ImageView
            android:id="@+id/iv_local"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@id/tv_journey_local"
            android:src="@drawable/landmark1"
            />


    </RelativeLayout>
    <View
        android:layout_alignParentBottom="true"
        android:background="@color/color_999"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>