<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/activity_fa_bu_huo_dong"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:toggle="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.cucr.myapplication.activity.huodong.FaBuHuoDongActivity"
        >

        <RelativeLayout
            android:id="@+id/comment_head"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleBarHight"
            android:background="@color/blue_black"

            >

            <ImageView
                android:id="@+id/iv_base_back"
                style="@style/IconBackStyle"
                />

            <TextView
                android:id="@+id/tv_base_title"
                style="@style/TitleStyle"
                android:text="活动发布"
                />

        </RelativeLayout>

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/activity_yu_yue_catgory"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                tools:context="com.cucr.myapplication.activity.yuyue.YuYueCatgoryActivity"
                >


                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="活动名称"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_12"
                        />

                    <EditText
                        android:id="@+id/et_active_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@null"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_14"
                        />

                    <include layout="@layout/horizontal_line_in_ll"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="活动地址"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_12"
                        />

                    <EditText
                        android:id="@+id/et_local_catgory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@null"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_14"
                        />

                    <include layout="@layout/horizontal_line_in_ll"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="活动时间"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_12"
                        />

                    <LinearLayout
                        android:id="@+id/ll_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_10"
                        >

                        <TextView
                            android:id="@+id/tv_time_star"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/sp_14"
                            />


                    </LinearLayout>

                    <include layout="@layout/horizontal_line_in_ll"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="活动费用预算"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_12"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:id="@+id/ll_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_10"
                            >

                            <EditText
                                android:id="@+id/et_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:gravity="right"
                                android:inputType="number"
                                android:lineSpacingExtra="@dimen/dp_4"
                                android:minWidth="8dp"
                                android:paddingRight="@dimen/dp_5"
                                android:textColor="@color/color_333"
                                android:textSize="@dimen/sp_14"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="万"
                                android:textColor="@color/color_666"
                                android:textSize="@dimen/sp_14"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_shiwai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_5"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="公开费用"
                                android:textColor="@color/color_333"
                                android:textSize="@dimen/sp_14"
                                />

                            <com.zcw.togglebutton.ToggleButton
                                android:id="@+id/toggle_show_price_tip"
                                android:layout_width="25dp"
                                android:layout_height="14dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_25"
                                toggle:tbOffColor="#ddd"
                                toggle:tbOnColor="@color/xtred"
                                toggle:tbSpotColor="#fff"
                                >
                            </com.zcw.togglebutton.ToggleButton>

                        </LinearLayout>

                    </LinearLayout>

                    <include layout="@layout/horizontal_line_in_ll"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="活动内容"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_12"
                        />

                    <EditText
                        android:id="@+id/et_active_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@null"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_14"
                        />

                    <include layout="@layout/horizontal_line_in_ll"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="嘉宾规模"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_12"
                        />

                    <LinearLayout
                        android:id="@+id/ll_peoples"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_8"
                        >

                        <EditText
                            android:id="@+id/et_peoples"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="right"
                            android:inputType="number"
                            android:lineSpacingExtra="@dimen/dp_4"
                            android:minWidth="11dp"
                            android:paddingRight="@dimen/dp_5"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/sp_14"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="人"
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/sp_14"
                            />
                    </LinearLayout>

                    <include layout="@layout/horizontal_line_in_ll"/>

                    <RelativeLayout
                        android:id="@+id/rl_fabu_huodong_pic"
                        android:layout_width="300dp"
                        android:layout_height="125dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_25"
                        android:background="@drawable/shape_bg_xuyaun_kuang"
                        android:clickable="true"
                        >

                        <ImageView
                            android:id="@+id/iv_add_pic_yingyezhizhao"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/huodong_add"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_add_pic_yingyezhizhao"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="添加活动封面"
                            android:textColor="#ccc"
                            android:textSize="@dimen/sp_15"
                            />

                        <com.joooonho.SelectableRoundedImageView
                            android:id="@+id/img_fabu_huodong_pic"
                            android:layout_width="300dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/shape_bg_ren_zheng"
                            android:scaleType="centerCrop"
                            android:visibility="gone"
                            app:sriv_left_bottom_corner_radius="@dimen/dp_5"
                            app:sriv_left_top_corner_radius="@dimen/dp_5"
                            app:sriv_right_bottom_corner_radius="@dimen/dp_5"
                            app:sriv_right_top_corner_radius="@dimen/dp_5"
                            />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_commit"
                        android:layout_width="230dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_40"
                        android:background="@drawable/shape_immediately_pay_bg"
                        android:gravity="center"
                        android:text="提交发布"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"
                        />


                </LinearLayout>


                <!-- app:counterEnabled="true" 这个是计数器-->
                <!-- app:counterOverflowTextAppearance 超出计数器的字体大小-->
                <!-- app:errorTextAppearance="@style/MyErrorStyle" 错误提示字体-->

                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:id="@+id/active_name"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:layout_width="300dp"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:hintTextAppearance="@style/MyHintStyle"-->
                <!--&gt;-->

                <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="活动名称"-->
                <!--android:singleLine="true"-->
                <!--android:textSize="@dimen/sp_14"-->
                <!--android:textColor="@color/color_333"-->
                <!--/>-->
                <!--</android.support.design.widget.TextInputLayout>-->


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_pop_bg_fb_huodong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5555"
        android:visibility="gone"
        />
</RelativeLayout>