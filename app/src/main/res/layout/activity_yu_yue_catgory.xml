<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_myyuyue_back"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingRight="20dp"
            android:src="@drawable/icon_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:text="预约"
            android:textColor="@color/title_color"
            android:textSize="18sp"
            />

        <include layout="@layout/horizontal_line_for_eee"/>

    </RelativeLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/activity_yu_yue_catgory"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context="com.cucr.myapplication.activity.yuyue.YuYueCatgoryActivity"
            >

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="135dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/case_bg"
                >

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_28"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/tv_star_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_toRightOf="@id/iv_head"
                    android:text="明星姓名"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_15"
                    />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_star_name"
                    android:layout_below="@id/tv_star_name"
                    android:layout_marginTop="20dp"
                    android:text="参考费用56万/场"
                    android:textSize="@dimen/sp_12"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="活动详情"
                android:textColor="@color/color_333"
                android:textSize="16sp"
                />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="活动名称"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    />

                <EditText
                    android:id="@+id/et_activename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingTop="@dimen/dp_10"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14"
                    />

                <include layout="@layout/horizontal_line_in_ll"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="活动地区"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    />

                <TextView
                    android:id="@+id/tv_active_local"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14"
                    />

                <include layout="@layout/horizontal_line_in_ll"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="详细地址"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    />

                <EditText
                    android:id="@+id/et_local_catgory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingTop="@dimen/dp_10"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14"
                    />

                <include layout="@layout/horizontal_line_in_ll"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="活动时间"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_time_star"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_14"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:text="到"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/sp_14"
                        />

                    <TextView
                        android:id="@+id/tv_time_end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5.5"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_14"
                        />

                </LinearLayout>

                <include layout="@layout/horizontal_line_in_ll"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="活动场景"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/ll_shinei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_5"
                        >

                        <ImageView
                            android:id="@+id/iv_shi_nei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/pc_nor"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="室内"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/sp_14"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_shiwai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:paddingLeft="@dimen/dp_5"
                        >

                        <ImageView
                            android:id="@+id/iv_shi_wai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/pc_sel"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="室外"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/sp_14"
                            />

                    </LinearLayout>

                </LinearLayout>

                <include layout="@layout/horizontal_line_in_ll"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="活动内容"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    />

                <EditText
                    android:id="@+id/et_active_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_10"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_14"
                    />

                <include layout="@layout/horizontal_line_in_ll"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="嘉宾规模"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_12"
                    />

                <LinearLayout
                    android:id="@+id/ll_peoples"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_8"
                    >

                    <EditText
                        android:id="@+id/et_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="number"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:minWidth="10dp"
                        android:paddingRight="@dimen/dp_5"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_14"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="人"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/sp_14"
                        />
                </LinearLayout>


                <include layout="@layout/horizontal_line_in_ll"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预约人"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/sp_13"
                        />

                    <TextView
                        android:id="@+id/et_qiyename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@null"
                        android:hint="预约时的企业全称"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_13"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系方式"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/sp_13"
                        />

                    <TextView
                        android:id="@+id/et_qiye_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@null"
                        android:hint="预约时的企业的联系方式"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_13"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_commit_yuyue"
                    android:layout_width="230dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@drawable/shape_immediately_pay_bg"
                    android:gravity="center"
                    android:text="提交预约"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"
                    />


            </LinearLayout>


            <!-- app:counterEnabled="true" 这个是计数器-->
            <!-- app:counterOverflowTextAppearance 超出计数器的字体大小-->
            <!-- app:errorTextAppearance="@style/MyErrorStyle" 错误提示字体-->

            <!--<android.support.design.widget.TextInputLayout-->
