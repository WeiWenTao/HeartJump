<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="260dp"
              android:layout_height="450dp"
              android:orientation="vertical"
    >

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/img_duihuan"
        android:layout_width="260dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/star1"
        app:sriv_left_top_corner_radius="@dimen/dp_10"
        app:sriv_right_top_corner_radius="@dimen/dp_10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_duihuan_bg"
        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="@dimen/dp_15"
            android:text="商品名称商品名称"
            android:textColor="@color/color_333"
            android:textSize="17sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="@dimen/dp_10"
            >

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="99星币"
                android:textColor="@color/pink"
                android:textSize="17sp"
                />

            <TextView
                android:id="@+id/tv_surplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量:10"
                android:textColor="#666"
                android:textSize="12sp"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_duihuan"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/selector_shenhe"
            android:gravity="center"
            android:text="立即兑换"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

    </LinearLayout>


</LinearLayout>