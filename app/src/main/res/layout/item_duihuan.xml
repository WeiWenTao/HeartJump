<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="260dp"
              android:layout_height="450dp"
              android:orientation="vertical"
    >

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/img_duihuan"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/star1"
        app:sriv_left_top_corner_radius="@dimen/dp_10"
        app:sriv_right_top_corner_radius="@dimen/dp_10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_duihuan_bg"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="@dimen/dp_20"
            android:text="商品名称商品名称"
            android:textColor="@color/color_333"
            android:textSize="17sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="@dimen/dp_20"
            android:text="99星币"
            android:textColor="@color/pink"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/tv_duihuan"
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/shape_immediately_pay_bg"
            android:gravity="center"
            android:text="立即兑换"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

    </LinearLayout>


</LinearLayout>