<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_new_load"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shi_bg"
    android:orientation="vertical"
    tools:context="com.cucr.myapplication.activity.regist.NewLoadActivity"
    >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_30"
        android:padding="@dimen/dp_5"
        android:src="@drawable/icon_back"
        />

    <ImageView
        android:layout_width="84dp"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:src="@drawable/sgi_logo"
        />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@drawable/shape_load_edit_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="13dp"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/dp_30"
            android:src="@drawable/sgi_tell"
            />

        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@null"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#ffcccc"
            android:textColorHint="#996666"
            android:textSize="@dimen/sp_16"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        >

        <LinearLayout
            android:id="@+id/ll_pswbox"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_load_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="14.5dp"
                android:layout_marginLeft="@dimen/dp_30"
                android:src="@drawable/sgi_pw"
                />

            <EditText
                android:id="@+id/et_set_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@null"
                android:hint="设置密码"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textColor="#ffcccc"
                android:textColorHint="#996666"
                android:textSize="@dimen/sp_16"
                />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_load_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="10dp"
                android:layout_height="14dp"
                android:layout_marginLeft="@dimen/dp_30"
                android:src="@drawable/sgi_pws"
                />

            <EditText
                android:id="@+id/et_yanzhengm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@null"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="#ffcccc"
                android:textColorHint="#996666"
                android:textSize="@dimen/sp_16"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_getyzm"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/shape_load_edit_bg"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_get_yanzhengm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="#ffcccc"
                android:textSize="@dimen/sp_16"
                />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/sgi_btn"
        android:gravity="center"
        android:text="注 册"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        />

    <LinearLayout
        android:id="@+id/ll_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即同意"
            android:textColor="#ffcccc"
            android:textSize="@dimen/sp_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心跳用户条款"
            android:textColor="#ff2a4d"
            android:textSize="@dimen/sp_15"
            />
    </LinearLayout>

</LinearLayout>
