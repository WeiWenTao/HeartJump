<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cucr.myapplication.activity.hyt.YyhdActivity_1"
    >

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_black"
        >


        <ImageView
            android:id="@+id/iv_base_back"
            style="@style/IconBackStyle"
            />

        <TextView
            style="@style/TitleStyle"
            android:text="点亮开屏"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="121dp"
                    android:text="应援活动封面"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_16"
                    />

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/iv_yyhd_cover"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@drawable/cover_pic"
                    app:sriv_left_bottom_corner_radius="@dimen/dp_5"
                    app:sriv_left_top_corner_radius="@dimen/dp_5"
                    app:sriv_right_bottom_corner_radius="@dimen/dp_5"
                    app:sriv_right_top_corner_radius="@dimen/dp_5"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/lvbg"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                >

                <TextView
                    style="@style/CreatHyt_TVStyle"
                    android:text="应援活动名称"
                    />

                <EditText
                    android:id="@+id/et_yyhd_name"
                    style="@style/CreatHyt_ETStyle"
                    android:layout_marginLeft="130dp"
                    android:hint="请输入应援活动名称"
                    />

                <include layout="@layout/horizontal_line_for_ccc"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlv_select_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                >

                <TextView
                    style="@style/CreatHyt_TVStyle"
                    android:text="应援活动时间"
                    />

                <TextView
                    android:id="@+id/tv_yyhd_time"
                    style="@style/CreatHyt_ETStyle"
                    android:layout_marginLeft="130dp"
                    android:gravity="center|left"
                    android:hint="请输选择时间"
                    />

                <include layout="@layout/horizontal_line_for_ccc"/>

            </RelativeLayout>

            <TextView
                style="@style/CreatHyt_TVStyle"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_18"
                android:text="应援活动内容"
                />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/shape_corner_8"
                android:gravity="left"
                android:hint="请输应援活动内容"
                android:padding="@dimen/dp_10"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_16"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                >

                <TextView
                    style="@style/CreatHyt_TVStyle"
                    android:text="应援方式:"
                    />

                <EditText
                    style="@style/CreatHyt_ETStyle"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="心跳互娱app为爱豆点亮开屏一天"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                >

                <TextView
                    style="@style/CreatHyt_TVStyle"
                    android:text="应援金额:"
                    />

                <TextView
                    android:id="@+id/tv_yyje"
                    style="@style/CreatHyt_ETStyle"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"

                    />

            </RelativeLayout>

            <ImageView
                android:layout_width="175dp"
                android:layout_height="358dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/phone"
                />

            <TextView
                android:id="@+id/tv_creat_yyhd_commit"
                android:elevation="@dimen/dp_5"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/shape_immediately_pay_bg"
                android:gravity="center"
                android:text="提交审核"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
