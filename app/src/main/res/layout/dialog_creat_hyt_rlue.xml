<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_publish_dialog_bg"
              android:orientation="vertical"
              android:padding="@dimen/dp_20"
    >

    <TextView
        android:id="@+id/tv_duihuan_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:text="创建规则"
        android:textColor="#333"
        android:textSize="@dimen/sp_16"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/tv_rule1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="1.创建明星后援团必须在该明星粉团发布20条粉团内容,才能审核通过;"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/tv_rule2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_rule1"
            android:layout_below="@id/tv_rule1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2.填写创建信息必须真实有效,如若不遵守,由此导致的不良后果均由创建人承担;"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/tv_rule3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_rule1"
            android:layout_below="@id/tv_rule2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="3.创建后援团成功后,团满10人就可以发起应援众筹活动申请应援资金,众筹资金均由工作人员线下联系发起人启用;"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/tv_rule4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_rule1"
            android:layout_below="@id/tv_rule3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="4.创建人可以招募粉丝加入,查看团员活跃排行,心跳互娱会定期给予优秀后援团奖励金;"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_12"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_isee"
        android:layout_width="125dp"
        android:layout_height="@dimen/dp_28"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_immediately_pay_bg"
        android:gravity="center"
        android:text="我知道了"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        />

</LinearLayout>