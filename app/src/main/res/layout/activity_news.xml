<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_news"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cucr.myapplication.activity.news.NewsActivity"
    >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_black"
        >

        <ImageView
            android:id="@+id/iv_news_back"
            style="@style/IconBackStyle"
            />

        <ImageView
            android:layout_width="31dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingLeft="10dp"
            android:src="@drawable/share"
            />


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <ScrollView
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_new_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:text="此处是新闻标题，字体加粗"
                android:textColor="@color/color_333"
                android:textSize="20sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/new_auther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/img4"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_auther_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/new_auther"
                        android:text="创联凯尔"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/sp_12"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_auther_name"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@id/new_auther"
                        android:text="11小时前"
                        android:textColor="#929292"
                        android:textSize="@dimen/sp_10"
                        />


                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_15"
                android:text="此处是新闻内此处是新闻内容此处是新闻内容此处是新闻内容此处是新闻内容此处是新闻内容此处是新闻内容此处是新闻内容容"
                android:lineSpacingExtra="5dp"
                />

            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/pic1_new"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_15"
                android:text="此处是新闻内此处是新闻内容此处是新闻内容此处是新闻内容此处是新闻内容此处是新闻内容此处是新闻内容此处是新闻内容容"
                android:lineSpacingExtra="5dp"
                />

            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/pic1_new"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_15"
                android:text="此处是新闻内此处是新闻内容此处是新闻内容此处是新闻内容此处是新闻内容此处是新闻内容此处是新闻内容此处是新闻内容容"
                android:lineSpacingExtra="5dp"
                />

            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/pic1_new"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />


        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <EditText
            android:layout_centerVertical="true"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:hint="我要吐槽"
            android:textColorHint="#ababab"
            />

        <LinearLayout
            android:id="@+id/ll_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_zan"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/good_selector"
                android:paddingRight="@dimen/dp_5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="1249"
                android:textColor="#929292"
                android:textSize="@dimen/sp_13"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_toLeftOf="@id/ll_goods"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_comment"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/icon_cm_nor"
                android:layout_marginRight="@dimen/dp_5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="789"
                android:textColor="#929292"
                android:textSize="@dimen/sp_13"
                />


        </LinearLayout>


    </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
