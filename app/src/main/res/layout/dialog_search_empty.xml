<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="350dp"
              android:background="@drawable/shape_corner_8_white"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    >

    <ImageView
        android:layout_width="74dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/empty_search"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="搜索不到此明星"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_15"
        />

    <TextView
        android:id="@+id/tv_who"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="是否将“某某某”推荐给心跳互娱？"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_15"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="53dp"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@drawable/corner_r_6_nor"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_40"
            android:background="@drawable/corner_r_6_sel"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            />

    </LinearLayout>


</LinearLayout>