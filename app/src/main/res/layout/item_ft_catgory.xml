<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/img_user"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最美人间四月天"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:id="@+id/tv_good_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:paddingBottom="1dp"
                    android:text="23"
                    android:textColor="#929292"
                    android:textSize="@dimen/sp_12"
                    />

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_13"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_toLeftOf="@id/tv_good_value"
                    android:src="@drawable/good_selector"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3-20"
                    android:textColor="#929292"
                    android:textSize="@dimen/sp_12"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="10:25"
                    android:textColor="#929292"
                    android:textSize="@dimen/sp_12"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="60dp"
        android:text="哇哇哇！行走的荷尔蒙，帅死了！"
        android:textColor="#333"
        android:textSize="@dimen/sp_15"
        />

    <LinearLayout

        android:id="@+id/ll_comment_more"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="#f9f9f9"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_comment_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="陈先森等人"
            android:textColor="#333"
            android:textSize="@dimen/sp_13"
            />

        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="共29条评论"
            android:textColor="#a02f2d"
            android:textSize="@dimen/sp_13"
            />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/icon_more"
            />
    </LinearLayout>

</LinearLayout>