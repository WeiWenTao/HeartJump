<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_huo_dong"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cucr.myapplication.activity.huodong.HuoDongActivity"
    >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_black"
        >

        <ImageView
            android:id="@+id/iv_active_back"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingRight="20dp"
            android:src="@drawable/icon_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_centerHorizontal="true"
            android:text="活动"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_active"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/lvbg"
        android:dividerHeight="@dimen/dp_10"
        />

</LinearLayout>
