<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="200dp"
              android:orientation="vertical"
              android:background="@drawable/shape_publish_dialog_bg"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:text="修改密码"
        android:textColor="#666"
        android:textSize="@dimen/sp_15"
        />

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/tv_old_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="原密码"
            android:textColor="#999"
            android:textSize="@dimen/sp_13"
            />

        <EditText
            android:id="@+id/et_old_psw"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/tv_old_psw"
            android:background="@null"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textSize="@dimen/sp_13"
            />

        <include layout="@layout/horizontal_line_for10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/tv_new_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="新密码"
            android:textColor="#999"
            android:textSize="@dimen/sp_13"
            />


        <EditText
            android:id="@+id/et_new_psw"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/tv_new_psw"
            android:background="@null"
            android:hint="请输入6-16位数字或符号"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textSize="@dimen/sp_13"
            />

        <include layout="@layout/horizontal_line_for10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/btn_cancel"
            android:background="@drawable/shape_publish_dialog_bg"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            android:textColor="#999"
            android:textSize="@dimen/sp_18"
            />

        <TextView
            android:id="@+id/btn_save"
            android:background="@drawable/shape_publish_dialog_bg"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="保存"
            android:textColor="@color/xtred"
            android:textSize="@dimen/sp_18"
            />
    </LinearLayout>

</LinearLayout>