<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/ll_up_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_myyuyue_bg"
        android:orientation="vertical"
       android:layout_margin="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/tv_sort_time"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_above="@+id/line"
            android:background="@drawable/setting_up_selector"
            android:gravity="center"
            android:text="按时间排序"
            android:textColor="@color/xtred"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#99cccccc" />

        <TextView
            android:id="@+id/tv_sort_goods"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/setting_down_selector"
            android:gravity="center"
            android:text="按点赞量排序"
            android:textColor="#333"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/setting_one_selector"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取 消"
            android:textColor="#999"
            android:textSize="17sp"
            />
    </LinearLayout>


</LinearLayout>