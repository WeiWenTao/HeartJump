<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/lvbg"
              android:orientation="vertical"
    >


    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_black"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_13"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            />

        <ImageView
            android:id="@+id/iv_header_msg"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingBottom="13dp"
            android:paddingLeft="18dp"
            android:paddingTop="10dp"
            android:src="@drawable/icon_msg"
            />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rl_enter_mypager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_15"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_user_mine"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/pic_bg"
                    app:civ_border_color="#ffff"
                    app:civ_border_width="1dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@id/iv_user_mine"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/ll_user_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="你瞅我干啥"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/sp_16"
                            />

                        <!--<ImageView-->
                        <!--android:id="@+id/imageView"-->
                        <!--android:layout_width="10dp"-->
                        <!--android:layout_height="13dp"-->
                        <!--android:layout_gravity="center_vertical"-->
                        <!--android:layout_marginLeft="@dimen/dp_5"-->
                        <!--android:src="@drawable/icon_girl"-->
                        <!--/>-->

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="这里是用户签名"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/sp_13"
                        />

                </LinearLayout>

                <ImageView
                    style="@style/My_Arrow"
                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ddd"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/ll_mine_focus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="67"
                            android:textColor="@color/pink"
                            android:textSize="18sp"
                            />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="关注"
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mine_fans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="556"
                            android:textColor="@color/pink"
                            android:textSize="18sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="粉丝"
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_pay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="234"
                            android:textColor="@color/pink"
                            android:textSize="18sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="星币"
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mine_dongtai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500"
                            android:textColor="@color/pink"
                            android:textSize="18sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="动态"
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/sp_12"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f6f6f6"
                android:orientation="vertical"
                >

                <!--认证-->
                <RelativeLayout
                    android:id="@+id/rl_ren_zheng"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    >

                    <ImageView
                        android:id="@+id/iv_ren_zheng"
                        style="@style/My_iv"
                        android:src="@drawable/m_rz"
                        />

                    <TextView
                        style="@style/My_tv"
                        android:layout_toRightOf="@id/iv_ren_zheng"
                        android:text="我的认证"
                        />

                    <ImageView
                        style="@style/My_Arrow"
                        />

                    <include layout="@layout/horizontal_line"
                        />
                </RelativeLayout>

                <!--要求-->
                <RelativeLayout
                    android:id="@+id/rl_require"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    >

                    <ImageView
                        android:id="@+id/iv_my_require"
                        style="@style/My_iv"
                        android:src="@drawable/m_requires"
                        />

                    <TextView
                        style="@style/My_tv"
                        android:layout_toRightOf="@id/iv_my_require"
                        android:text="我的要求"
                        />

                    <ImageView
                        style="@style/My_Arrow"
                        />

                    <include layout="@layout/horizontal_line"
                        />

                </RelativeLayout>

                <!--预约-->
                <RelativeLayout
                    android:id="@+id/rl_my_yuyue"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:clickable="true"
                    >

                    <ImageView
                        android:id="@+id/iv_my_yuyue"
                        style="@style/My_iv"
                        android:src="@drawable/m_appoinment"
                        />

                    <TextView
                        style="@style/My_tv"
                        android:layout_toRightOf="@id/iv_my_yuyue"
                        android:text="我的预约"
                        />

                    <ImageView
                        style="@style/My_Arrow"
                        />

                    <include layout="@layout/horizontal_line"
                        />
                </RelativeLayout>

                <!--行程-->
                <RelativeLayout
                    android:id="@+id/rl_my_journey"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    android:clickable="true"
                    >

                    <ImageView
                        android:id="@+id/iv_my_journey"
                        style="@style/My_iv"
                        android:src="@drawable/m_xc"
                        />

                    <TextView
                        style="@style/My_tv"
                        android:layout_toRightOf="@id/iv_my_journey"
                        android:text="我的行程"
                        />

                    <ImageView
                        style="@style/My_Arrow"
                        />

                    <include layout="@layout/horizontal_line"
                        />
                </RelativeLayout>

                <!--充值中心-->
                <RelativeLayout
                    android:id="@+id/rl_pay_center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    >

                    <ImageView
                        android:id="@+id/iv_my_pay"
                        style="@style/My_iv"
                        android:src="@drawable/m_cz"
                        />

                    <TextView
                        style="@style/My_tv"
                        android:layout_toRightOf="@id/iv_my_pay"
                        android:text="充值中心"
                        />

                    <ImageView
                        style="@style/My_Arrow"
                        />

                    <include layout="@layout/horizontal_line"
                        />
                </RelativeLayout>

                <!--邀请有礼-->
                <RelativeLayout
                    android:id="@+id/rl_yaoqing"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    >

                    <ImageView
                        android:id="@+id/iv_my_task"
                        style="@style/My_iv"
                        android:src="@drawable/m_invate"
                        />

                    <TextView
                        style="@style/My_tv"
                        android:layout_toRightOf="@id/iv_my_task"
                        android:text="邀请有礼"
                        />

                    <ImageView
                        android:id="@+id/iv_yaoqing"
                        style="@style/My_Arrow"
                        />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_toLeftOf="@id/iv_yaoqing"
                        android:background="@drawable/shape_immediately_pay_bg"
                        android:gravity="center"
                        android:text="免费星币等你来领"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        />

                    <include layout="@layout/horizontal_line"
                        />
                </RelativeLayout>

                <!--设置-->
                <RelativeLayout
                    android:id="@+id/rl_setting"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fff"
                    >

                    <ImageView
                        android:id="@+id/iv_my_setting"
                        style="@style/My_iv"
                        android:src="@drawable/m_set"
                        />

                    <TextView
                        style="@style/My_tv"
                        android:layout_toRightOf="@id/iv_my_setting"
                        android:text="设置"
                        />

                    <ImageView
                        style="@style/My_Arrow"
                        />
                </RelativeLayout>

                <!--票务-->
                <RelativeLayout
                    android:id="@+id/rl_piaowu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#fff"
                    >

                    <ImageView
                        android:id="@+id/iv_my_rl_piaowu"
                        style="@style/My_iv"
                        android:src="@drawable/m_pw"
                        />

                    <TextView
                        style="@style/My_tv"
                        android:layout_toRightOf="@id/iv_my_rl_piaowu"
                        android:text="票务福利"
                        />

                    <ImageView
                        style="@style/My_Arrow"
                        />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>