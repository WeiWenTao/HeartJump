<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_sign"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.cucr.myapplication.activity.home.SignActivity"
    >

    <include layout="@layout/activity_base_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="8月"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_20"
                    />

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="2017年"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_14"
                    />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical|right"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@drawable/shape_circle_sign"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="表示不可预约档期"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_15"
                        />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="338dp"
                android:layout_gravity="center_horizontal"
                >

                <com.cucr.myapplication.widget.signcalendar.SignCalendar
                    android:id="@+id/sc_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:clickable="true"
                    >
                </com.cucr.myapplication.widget.signcalendar.SignCalendar>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/lvbg"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="17dp"
                    android:text="随行助理人数"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_13"
                    />

                <EditText
                    android:id="@+id/et_peoples"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="38dp"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_16"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/et_peoples"
                    android:layout_toRightOf="@id/et_peoples"
                    android:text="人"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_16"
                    />

            </RelativeLayout>

            <View
                android:layout_width="320dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:background="#ccc"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="17dp"
                    android:text="出演场地"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_13"
                    />

                <RadioGroup
                    android:id="@+id/rg_place"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="38dp"
                    android:layout_marginRight="38dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rb_place1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="true"
                        android:text="室内"
                        android:textColor="@color/text_selector_star_requires"
                        android:textSize="@dimen/sp_13"
                        />

                    <RadioButton
                        android:id="@+id/rb_place2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="室内"
                        android:textColor="@color/text_selector_star_requires"
                        android:textSize="@dimen/sp_13"
                        />

                    <RadioButton
                        android:id="@+id/rb_place3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="室内室外都行"
                        android:textColor="@color/text_selector_star_requires"
                        android:textSize="@dimen/sp_13"
                        />

                </RadioGroup>

            </RelativeLayout>

            <View
                android:layout_width="320dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:background="#ccc"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="17dp"
                    android:text="机票要求"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_13"
                    />

                <EditText
                    android:id="@+id/et_fly"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tv_fly"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/xtred"
                    android:textSize="@dimen/sp_16"
                    />

                <TextView
                    android:id="@+id/tv_fly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/et_fly1"
                    android:layout_marginLeft="38dp"
                    android:text="头等舱"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_16"
                    />

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/et_fly"
                    android:layout_toRightOf="@id/et_fly"
                    android:text="张"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_16"
                    />

                <TextView
                    android:id="@+id/tv_fly1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/et_fly1"
                    android:layout_marginLeft="60dp"
                    android:layout_toRightOf="@id/tv_unit"
                    android:text="经济舱"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_16"
                    />

                <EditText
                    android:id="@+id/et_fly1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/tv_fly1"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/xtred"
                    android:textSize="@dimen/sp_16"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/et_fly1"
                    android:layout_toRightOf="@id/et_fly1"
                    android:text="张"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_16"
                    />

            </RelativeLayout>

            <View
                android:layout_width="320dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:background="#ccc"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="17dp"
                    android:text="用车要求"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_13"
                    />

                <TextView
                    android:id="@+id/tv_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="38dp"
                    android:text="别克商务"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_16"
                    />

                <EditText
                    android:id="@+id/et_car"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/tv_car"
                    android:background="@null"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/xtred"
                    android:textSize="@dimen/sp_16"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/et_car"
                    android:layout_toRightOf="@id/et_car"
                    android:text="辆"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/sp_16"
                    />

            </RelativeLayout>

            <View
                android:layout_width="320dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:background="#ccc"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="17dp"
                    android:text="住宿要求"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_13"
                    />

                <RadioGroup
                    android:id="@+id/rg_live"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="38dp"
                    android:layout_marginRight="38dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rb_live_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="true"
                        android:text="五星级或以上酒店"
                        android:textColor="@color/text_selector_star_requires"
                        android:textSize="@dimen/sp_16"
                        />

                    <RadioButton
                        android:id="@+id/rb_live_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="四星级酒店"
                        android:textColor="@color/text_selector_star_requires"
                        android:textSize="@dimen/sp_16"
                        />

                </RadioGroup>

            </RelativeLayout>

            <View
                android:layout_width="320dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:background="#ccc"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="17dp"
                    android:text="化妆师"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_13"
                    />

                <RadioGroup
                    android:id="@+id/rg_dresser"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="38dp"
                    android:layout_marginRight="38dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rb_dresser1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="true"
                        android:text="自带化妆师"
                        android:textColor="@color/text_selector_star_requires"
                        android:textSize="@dimen/sp_16"
                        />

                    <RadioButton
                        android:id="@+id/rb_dresser2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="活动安排化妆师"
                        android:textColor="@color/text_selector_star_requires"
                        android:textSize="@dimen/sp_16"
                        />

                </RadioGroup>

            </RelativeLayout>

            <View
                android:layout_width="320dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:background="#ccc"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="17dp"
                    android:text="是否安排啊粉丝接机"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_13"
                    />

                <RadioGroup
                    android:id="@+id/rg_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="38dp"
                    android:layout_marginRight="38dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rb_welcome1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="true"
                        android:text="安排"
                        android:textColor="@color/text_selector_star_requires"
                        android:textSize="@dimen/sp_16"
                        />

                    <RadioButton
                        android:id="@+id/rb_welcome2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="不安排"
                        android:textColor="@color/text_selector_star_requires"
                        android:textSize="@dimen/sp_16"
                        />

                </RadioGroup>

            </RelativeLayout>

            <View
                android:layout_width="320dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:background="#ccc"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="17dp"
                    android:text="其他特殊要求"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_13"
                    />

                <EditText
                    android:id="@+id/et_other_require"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="50dp"
                    android:background="@null"
                    android:hint="特殊要求说明"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/color_333"
                    android:textColorHint="#999"
                    android:textSize="@dimen/sp_16"
                    />

            </RelativeLayout>

            <View
                android:layout_width="320dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:background="#ccc"
                />

            <TextView
                android:id="@+id/tv_save_requires"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_40"
                android:layout_marginTop="60dp"
                android:background="@drawable/bt_bg"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
