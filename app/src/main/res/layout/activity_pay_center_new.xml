<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_star_money"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.cucr.myapplication.activity.pay.PayCenterActivity"
    >


    <include layout="@layout/activity_base_title"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值账号:"
                    android:textColor="#666"
                    android:textSize="@dimen/sp_15"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="创联凯尔"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_15"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="#ebebeb"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额:"
                    android:textColor="#666"
                    android:textSize="@dimen/sp_15"
                    />

                <TextView
                    android:id="@+id/tv_user_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="0"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_15"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/lvbg"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:text="请选择充值数量"
                android:textColor="#333"
                android:textSize="@dimen/sp_15"
                />

            <RadioGroup
                android:id="@+id/rg_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <RadioGroup
                    android:id="@+id/rg1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rg1_rb1"
                        style="@style/StarMoneyRB"
                        android:text="50星币"
                        />

                    <RadioButton
                        android:id="@+id/rg1_rb2"
                        style="@style/StarMoneyRB"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="3dp"
                        android:text="100星币"
                        />

                    <RadioButton
                        android:id="@+id/rg1_rb3"
                        style="@style/StarMoneyRB"
                        android:text="200星币"
                        />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rg2"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rg2_rb1"
                        style="@style/StarMoneyRB"
                        android:text="1000星币"
                        />

                    <RadioButton
                        android:id="@+id/rg2_rb2"
                        style="@style/StarMoneyRB"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="3dp"
                        android:text="2000星币"
                        />

                    <RadioButton
                        android:id="@+id/rg2_rb3"
                        style="@style/StarMoneyRB"
                        android:text="10000星币"
                        />
                </RadioGroup>

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_25"
                android:background="#ccc"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:text="请选择充值方式"
                android:textColor="#333"
                android:textSize="@dimen/sp_15"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/ll_alipay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    >

                    <ImageView
                        android:id="@+id/iv_alipay_d"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:src="@drawable/pc_sel"
                        />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@drawable/pay_sel"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sp_10"
                        android:text="支付宝支付"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_15"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wxpay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    >

                    <ImageView
                        android:id="@+id/iv_wx_d"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:src="@drawable/pc_nor"
                        />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@drawable/weixin_sel"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sp_10"
                        android:text="微信支付"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/sp_15"
                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_pay_now"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:background="@drawable/sgi_btn"
                android:gravity="center"
                android:text="立即充值"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
