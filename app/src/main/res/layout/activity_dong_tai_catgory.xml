<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_dong_tai_catgory"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cucr.myapplication.activity.dongtai.DongTaiCatgoryActivity"
    >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_black"
        >

        <ImageView
            android:id="@+id/iv_base_back"
            style="@style/IconBackStyle"
            />

        <TextView
            android:id="@+id/tv_base_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"

            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/iv_dongtai_catgory_more"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_10"
            android:src="@drawable/more_"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_dongtai_catgory"
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_50"
        ></ListView>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        >

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="我要吐槽"
            android:textColorHint="#ababab"
            android:textSize="@dimen/sp_13"
            android:theme="@style/MyEditText"
            />

        <LinearLayout
            android:id="@+id/ll_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:id="@+id/iv_zan"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:paddingRight="@dimen/dp_5"
                android:src="@drawable/good_selector"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1249"
                android:textColor="#929292"
                android:textSize="@dimen/sp_13"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_toLeftOf="@id/ll_goods"
            >

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_5"
                android:src="@drawable/icon_cm_nor"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="789"
                android:textColor="#929292"
                android:textSize="@dimen/sp_13"
                />


        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_pop_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popWindowBg"
        android:visibility="gone"
        />


</RelativeLayout>
