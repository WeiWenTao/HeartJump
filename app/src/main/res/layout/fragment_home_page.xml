<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/comment_head"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBarHight"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/tv_base_title"
            style="@style/TitleStyle"
            android:text="心跳互娱"
            />

        <ImageView
            android:id="@+id/iv_header_msg"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingBottom="13dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:src="@drawable/icon_message"
            />

        <include layout="@layout/horizontal_line_for_eee"/>

    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"

        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:background="#eee"
            android:paddingBottom="1px"
            >

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="203dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                >

                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:canLoop="true"
                    app:layout_collapseMode="parallax"
                    />

                <RelativeLayout
                    android:id="@+id/rlv_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/tv_starname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"
                        />

                    <TextView
                        android:id="@+id/tv_yuyue"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_toRightOf="@id/tv_starname"
                        android:background="@drawable/shape_bg_yuyue"
                        android:gravity="center"
                        android:text="预约"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/tv_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_starname"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        />

                    <LinearLayout
                        android:id="@+id/ll_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_fans"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/icon_photoalbum"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="图片墙"
                            android:textColor="#f3f3f3"
                            android:textSize="@dimen/sp_14"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_hyt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_fans"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_toRightOf="@id/ll_photos"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/icon_teams"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="后援团"
                            android:textColor="#f3f3f3"
                            android:textSize="@dimen/sp_14"
                            />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_weib"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignBottom="@+id/ll_hyt"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_toRightOf="@+id/ll_hyt"
                        android:src="@drawable/weibo"
                        />

                    <ImageView
                        android:id="@+id/iv_player"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignBottom="@+id/ll_hyt"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_toRightOf="@+id/iv_weib"
                        android:src="@drawable/music"
                        />


                </RelativeLayout>

            </RelativeLayout>

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/magic_indicator_personal_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                />

        </android.support.design.widget.AppBarLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />

    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>