<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_add_journey"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.cucr.myapplication.activity.journey.AddJourneyActivity"
    >

    <include layout="@layout/activity_base_title"/>

    <RelativeLayout
        android:id="@+id/rl_journey_date"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="37.5dp"
        android:layout_marginRight="37.5dp"
        android:layout_marginTop="@dimen/dp_25"
        >

        <ImageView
            android:id="@+id/local_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/icom_time"
            />

        <TextView
            android:id="@+id/local_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/local_icon"
            android:text="2017-09-08 星期五"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_16"
            />

        <include layout="@layout/horizontal_line_for_ccc"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_journey_local"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="37.5dp"
        android:layout_marginRight="37.5dp"
        android:layout_marginTop="@dimen/dp_25"
        >

        <ImageView
            android:id="@+id/date_icon"
            android:layout_width="20dp"
            android:layout_height="27.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/icon_ad"
            />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22.5dp"
            android:layout_toRightOf="@id/date_icon"
            android:text="湖北省 武汉市 洪山区"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_16"
            />

        <include layout="@layout/horizontal_line_for_ccc"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57.5dp"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/color_999"
        android:textSize="@dimen/sp_16"
        android:text="行程内容"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="37.5dp"
        android:layout_marginRight="37.5dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_journey_bg"
        android:lineSpacingExtra="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="22.5dp"
        android:ellipsize="end"
        android:paddingRight="22.5dp"
        android:paddingTop="@dimen/dp_15"
        android:text="行程内容行程内容行程内容行程内容行程内容行程内容行程内容"
        />


    <TextView
        android:id="@+id/tv_save"
        android:layout_width="200dp"
        android:layout_height="@dimen/dp_35"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_immediately_pay_bg"
        android:gravity="center"
        android:text="添   加"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        />


</LinearLayout>
