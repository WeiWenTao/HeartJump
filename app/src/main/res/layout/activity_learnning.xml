<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cucr.myapplication.activity.setting.LearnningActivity"
    android:fitsSystemWindows="true"
    >

    <include layout="@layout/activity_base_title"/>

    <RelativeLayout
        android:id="@+id/rl_learn_rz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        >

        <TextView
            style="@style/My_tv"
            android:textColor="@color/color_333"
            android:text="1、如何认证？"
            />

        <ImageView
            style="@style/My_Arrow"
            />

        <include layout="@layout/horizontal_line_for_ccc"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_learn_yy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        >

        <TextView
            style="@style/My_tv"
            android:textColor="@color/color_333"
            android:text="2、如何预约明星？"
            />

        <ImageView
            style="@style/My_Arrow"
            />

        <include layout="@layout/horizontal_line_for_ccc"
            />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_learn_ds"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        >

        <TextView
            style="@style/My_tv"
            android:textColor="@color/color_333"
            android:text="3、如何打赏礼物？"
            />

        <ImageView
            style="@style/My_Arrow"
            />

        <include layout="@layout/horizontal_line_for_ccc"
            />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_learn_zm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        >

        <TextView
            style="@style/My_tv"
            android:textColor="@color/color_333"
            android:text="4、如何招募全网明星？"
            />

        <ImageView
            style="@style/My_Arrow"
            />

    </RelativeLayout>


</LinearLayout>
