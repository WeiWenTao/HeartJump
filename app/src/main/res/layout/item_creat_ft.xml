<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:background="@drawable/fans_bg"
        >

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/img_starft_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/star3_new"
            app:sriv_left_bottom_corner_radius="@dimen/dp_5"
            app:sriv_left_top_corner_radius="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/tv_star_name_ft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/img_starft_pic"
            android:singleLine="true"
            android:text="明星姓名"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_16"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_star_name_ft"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/img_starft_pic"
            android:singleLine="true"
            android:text="类型：歌手"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_15"
            />

        <RelativeLayout
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:id="@+id/iv_ft_like"
                android:layout_width="23dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30"
                android:src="@drawable/like_big"
                />

            <TextView
                android:id="@+id/tv_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_ft_like"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:singleLine="true"
                android:text="12人喜欢"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_12"
                />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
